<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aniket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#5d6d7e"
    tools:context="com.example.rr.player.AniketActivity">

    <Button
        android:text="Play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="105dp"
        android:drawableLeft="@drawable/play"
        android:background="#21618c"
        android:id="@+id/buttonPlayChaite" />

    <Button
        android:text="Pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21618c"
        android:textColor="@android:color/white"
        android:id="@+id/PasueAm"
        android:drawableLeft="@drawable/pause"
        android:layout_below="@+id/buttonPlayChaite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <Button
        android:text="Stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21618c"
        android:drawableLeft="@drawable/stop"
        android:textColor="@android:color/white"
        android:layout_marginTop="38dp"
        android:id="@+id/buttonStopChaite"
        android:layout_below="@+id/PasueAm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
